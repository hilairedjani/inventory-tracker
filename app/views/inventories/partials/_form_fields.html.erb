<div class="card card-body mb-3">
  <h5 class="card-title">Inventory</h5>
  <div class="row">
    <div class="col pb-3">
      <%= f.label :sku, "SKU (Stock Keeping Unit)", class: "form-label" %>
      <%= f.text_field :sku, class: "form-control" %>
    </div>
    <div class="col pb-3">
      <%= f.label :barcode, "Barcode (ISBN, UPC, etc)", class: "form-label" %>
      <%= f.text_field :barcode, class: "form-control" %>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <div class="form-check">
        <%= f.check_box :track_quantity, class: "form-check-input" %>
        <%= f.label :track_quantity, "Track quantity", class: "form-check-label" %>
      </div>
    </div>
  </div>
  <hr>
  <h5 class="card-title">Quantity</h5>
  <div class="row">
    <div class="col">
      <%= f.label :quantity, "Available", class: "form-label" %>
      <%= f.number_field :quantity, min: 0, class: "form-control" %>
    </div>
  </div>
</div>
